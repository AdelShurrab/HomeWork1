<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Solid color for the button background -->
    <solid android:color="@color/green" />
    <!-- 0dp radius to keep the corners sharp (rectangular) -->
    <corners android:radius="0dp" />
    <!-- Optional padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
